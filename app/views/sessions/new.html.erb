<h1>Login</h1>



<%= form_for(:session, url: login_path) do |f| %>

  
  <div class="form-group row">
    
    <div class="col-sm-2">
      <%= f.label :email, class: "col-form-label" %>
    </div>
    
    <div class="col-sm-8">
      <%= f.text_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
  </div>
  
  <div class="form-group row">
    
    <div class="col-sm-2">
      <%= f.label :password, class: "col-form-label" %>
    </div>
    
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Enter password" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-sm-8 offset-sm-2">
      <%= f.submit "Login", class: "btn btn-primary" %>
    </div>
  </div>

<% end %> 